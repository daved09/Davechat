<Window x:Class="Davechat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Davechat"
        mc:Ignorable="d"
        Title="Davechat" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <TextBox Margin="10,10,10,38" TextWrapping="Wrap" Text="" AcceptsReturn="True" IsReadOnly="True" SpellCheck.IsEnabled="True" ToolTip="Chathistory"/>
        <TextBox Height="23" Margin="10,0,10,10" SpellCheck.IsEnabled="True" PreviewKeyDown="TextBox_PreviewKeyDown" ToolTip="Enter text here" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
